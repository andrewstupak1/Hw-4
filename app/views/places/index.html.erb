<h1>Places</h1>

<p>
   <a href="/places/new/" class="btn btn-success">New Place</a>
</p>

<ul>
  <% if @places %> 
    <% for place in @places %>
      <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
    <% end %>
  <% else %>
    <p>You don't have any places yet.</p>
  <% end %>
</ul>

